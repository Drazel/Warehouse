@using WarehouseResource
@model Warehouse.Models.Package.PackageListModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row hidden-xs">
    <div class="col-xs-12">
        <h1>@ResPackege.ListPackage</h1>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-4 col-sm-4">
                    @ResGlobal.Name
                </div>
                <div class="col-xs-4 col-sm-2">
                    @ResGlobal.Width
                </div>
                <div class="col-xs-4 col-sm-2">
                    @ResGlobal.Length
                </div>
                <div class="col-xs-4 col-sm-2">
                    @ResGlobal.Height
                </div>
                <div class="col-xs-8 col-sm-2">
                    @ResGlobal.Action
                </div>
            </div>
        </div>
        <div class="panel-body">

            @foreach (var item in Model.Packages)
            {
                <div class="row">
                    <div class="col-xs-4 col-sm-4">
                        @ResGlobal.Name
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        @ResGlobal.Width
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        @ResGlobal.Length
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        @ResGlobal.Height
                    </div>
                    <div class="col-xs-8 col-sm-2">
                        @Html.ActionLink(" ", "Edit", new { packageId = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Edit" })
                    </div>
                </div>
            }

        </div>
    </div>
</div>
