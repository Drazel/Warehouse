@using WarehouseResource
@model Warehouse.Models.Product.ProductsListModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row hidden-xs">
    <div class="col-xs-12">
        <h1>@ResProduct.ProductList</h1>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-6 col-sm-3">
                    @ResProduct.Ean
                </div>
                <div class="col-xs-6 col-sm-3">
                    @ResGlobal.Name
                </div>
                <div class="col-xs-1 col-sm-1">
                    @ResGlobal.Width
                </div>
                <div class="col-xs-1 col-sm-1">
                    @ResGlobal.Length
                </div>
                <div class="col-xs-1 col-sm-1">
                    @ResGlobal.Height
                </div>
                <div class="col-xs-1 col-sm-1">
                    @ResGlobal.Weight
                </div>
                <div class="col-xs-2 col-sm-2">
                    @ResGlobal.Action
                </div>
            </div>
        </div>
        <div class="panel-body">

            @foreach (var item in Model.Products)
            {
                <div class="row">
                    <div class="col-xs-6 col-sm-3">
                        @item.Ean
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        @item.Name
                    </div>
                    <div class="col-xs-1 col-sm-1">
                        @item.Width
                    </div>
                    <div class="col-xs-1 col-sm-1">
                        @item.Length
                    </div>
                    <div class="col-xs-1 col-sm-1">
                        @item.Height
                    </div>
                    <div class="col-xs-1 col-sm-1">
                        @item.Weight
                    </div>
                    <div class="col-xs-2 col-sm-2">
                        @Html.ActionLink(" ", "Update", new { productId = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Edit" })
                    </div>
                </div>
            }

        </div>
    </div>
</div>
