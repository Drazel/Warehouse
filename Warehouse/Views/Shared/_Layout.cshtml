@using WarehouseResource
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="main-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@ResGlobal.Admin <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Add", "Product")">@ResProduct.AddProduct</a></li>
                            <li><a href="@Url.Action("List", "Product")">@ResProduct.ProductList</a></li>
                            <li><a href="@Url.Action("Create", "WarehouseSocet")">@ResSocet.AddSocet</a></li>
                            <li><a href="@Url.Action("List", "WarehouseSocet")">@ResSocet.ListSocet</a></li>
                            <li><a href="@Url.Action("Create", "Package")">@ResPackege.AddPackage</a></li>
                            <li><a href="@Url.Action("List", "Package")">@ResPackege.ListPackage</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@ResGlobal.Warehouse <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("ProductToSocet", "SocetProduct")">@ResGlobal.SocetProdukt</a></li>
                            <li><a href="@Url.Action("OutProductList", "ProductList")">@ResGlobal.OutProductList</a></li>
                            <li><a href="@Url.Action("WarehouseProduct", "ProductList")">@ResGlobal.WarehouseProduct</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
