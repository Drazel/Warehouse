@using WarehouseResource
@model Warehouse.Models.WarehouseSocet.WarehouseSocetsListModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row hidden-xs">
    <div class="col-xs-12">
        <h1>@ResSocet.ListSocet</h1>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-4 col-sm-2">
                    @ResSocet.RowBookstand
                </div>
                <div class="col-xs-4 col-sm-2">
                    @ResSocet.ShelfBookstand
                </div>
                <div class="col-xs-4 col-sm-2">
                    @ResSocet.SocetNumber
                </div>
                <div class="col-xs-2 col-sm-1">
                    @ResSocet.MaxWeight
                </div>
                <div class="col-xs-2 col-sm-1">
                    @ResSocet.UseWeight
                </div>
                <div class="col-xs-2 col-sm-1">
                    @ResSocet.MaxVolume
                </div>
                <div class="col-xs-2 col-sm-1">
                    @ResSocet.UseVolume
                </div>
                <div class="col-xs-4 col-sm-2">
                    @ResGlobal.Action
                </div>
            </div>
        </div>
        <div class="panel-body">

            @foreach (var item in Model.WarehouseSocets)
            {
                <div class="row">
                    <div class="col-xs-4 col-sm-2">
                        @item.RowBookstand
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        @item.ShelfBookstand
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        @item.SocetNumber
                    </div>
                    <div class="col-xs-2 col-sm-1">
                        @item.MaxWeight
                    </div>
                    <div class="col-xs-2 col-sm-1">
                        @item.UseWeight
                    </div>
                    <div class="col-xs-2 col-sm-1">
                        @item.MaxVolume
                    </div>
                    <div class="col-xs-2 col-sm-1">
                        @item.UseVolume
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        @Html.ActionLink(" ", "Edit", new { socetId = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Edit" })
                    </div>
                </div>
            }

        </div>
    </div>
</div>
